<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/resturantstyle"
    android:layoutDirection="ltr"
    android:textDirection="ltr"
    android:layout_margin="8dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8dp"
        android:layout_marginStart="@dimen/margin_8dp"
        android:layout_marginEnd="@dimen/margin_8dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/Resturants_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#067037"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center"
            android:textAlignment="gravity"
            android:text="text" />
        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/ic_favoriteempty"
            android:id="@+id/ic_favorit"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:visibility="gone"

            android:layout_height="wrap_content">

        </ImageView>
    </LinearLayout>


    <TextView
        android:id="@+id/Resturants_desc"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/margin_8dp"
        android:layout_height="wrap_content"
        android:lineSpacingMultiplier="1.5"
        android:textAlignment="gravity"
        android:layout_marginStart="@dimen/margin_8dp"
        android:layout_marginEnd="@dimen/margin_8dp"
        android:text="@string/informationtext" />

    <TextView
        android:id="@+id/Resturants_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="gravity"
        android:lineSpacingMultiplier="1.5"
        android:layout_marginStart="@dimen/margin_8dp"
        android:layout_marginEnd="@dimen/margin_8dp"
        android:text="" />

    <TextView
        android:id="@+id/Resturants_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="gravity"
        android:lineSpacingMultiplier="1.5"
        android:layout_marginStart="@dimen/margin_8dp"
        android:layout_marginEnd="@dimen/margin_8dp"
        android:text="" />

    <TextView
        android:id="@+id/Resturants_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="gravity"
        android:lineSpacingMultiplier="1.5"
        android:layout_marginStart="@dimen/margin_8dp"
        android:layout_marginEnd="@dimen/margin_8dp"
        android:drawableStart="@drawable/ic_location_on_black_24dp"
        android:drawablePadding="16dp"
        android:text="@string/resturant_location" />

</LinearLayout>