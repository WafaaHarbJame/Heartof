<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/resturantstyle"
    android:layoutDirection="rtl"
    android:textDirection="rtl"
    android:layout_margin="8dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/Resturants_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#067037"
        android:textStyle="bold"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginTop="@dimen/margin_8dp"
        android:textAlignment="gravity"
        android:text="text" />

    <TextView
        android:id="@+id/Resturants_desc"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/margin_8dp"
        android:textAlignment="gravity"
        android:layout_height="wrap_content"
        android:lineSpacingMultiplier="1.5"
        android:layout_marginStart="@dimen/margin_8dp"
        android:layout_marginEnd="@dimen/margin_8dp"
        android:text="@string/informationtext" />

    <TextView
        android:id="@+id/Resturants_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8dp"
        android:textAlignment="gravity"
        android:lineSpacingMultiplier="1.5"
        android:layout_marginStart="@dimen/margin_8dp"
        android:layout_marginEnd="@dimen/margin_8dp"
        android:text="text" />

    <TextView
        android:id="@+id/Resturants_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8dp"
        android:textAlignment="gravity"
        android:lineSpacingMultiplier="1.5"
        android:layout_marginStart="@dimen/margin_8dp"
        android:layout_marginEnd="@dimen/margin_8dp"
        android:text="text" />

    <TextView
        android:id="@+id/Resturants_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8dp"
        android:textAlignment="gravity"
        android:lineSpacingMultiplier="1.5"
        android:layout_marginStart="@dimen/margin_8dp"
        android:layout_marginEnd="@dimen/margin_8dp"
        android:text="text" />

</LinearLayout>